<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/tv_profile_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="25sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_profile2"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="155dp"
        android:layout_height="155dp"
        app:cardCornerRadius="250dp"
        app:cardBackgroundColor="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="250dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_profile2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/mockup_motocycle"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priya mita"
        android:textSize="28sp"
        android:fontFamily="@font/jost_bold"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cv_profile2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mitamita@gmail.com"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/iv_edit_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_profile_person"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"/>

    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit profile"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/iv_edit_profile"
        app:layout_constraintTop_toTopOf="@id/iv_edit_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_edit_profile"
        android:layout_marginStart="36dp"/>

    <ImageView
        android:id="@+id/iv_payment"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_profile_payment"
        app:layout_constraintTop_toBottomOf="@id/iv_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/iv_payment"
        app:layout_constraintTop_toTopOf="@id/iv_payment"
        app:layout_constraintBottom_toBottomOf="@id/iv_payment"
        android:layout_marginStart="36dp"/>

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_profile_notification"
        app:layout_constraintTop_toBottomOf="@id/iv_payment"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/iv_notification"
        app:layout_constraintTop_toTopOf="@id/iv_notification"
        app:layout_constraintBottom_toBottomOf="@id/iv_notification"
        android:layout_marginStart="36dp"/>

    <ImageView
        android:id="@+id/iv_security"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_security"
        app:layout_constraintTop_toBottomOf="@id/iv_notification"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/iv_security"
        app:layout_constraintTop_toTopOf="@id/iv_security"
        app:layout_constraintBottom_toBottomOf="@id/iv_security"
        android:layout_marginStart="36dp"/>

    <ImageView
        android:id="@+id/iv_help"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_profile_help"
        app:layout_constraintTop_toBottomOf="@id/iv_security"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/iv_help"
        app:layout_constraintTop_toTopOf="@id/iv_help"
        app:layout_constraintBottom_toBottomOf="@id/iv_help"
        android:layout_marginStart="36dp"/>

    <ImageView
        android:id="@+id/iv_logout"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_logout"
        app:layout_constraintTop_toBottomOf="@id/iv_help"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="22sp"
        android:textColor="#DE1800"
        app:layout_constraintStart_toEndOf="@id/iv_logout"
        app:layout_constraintTop_toTopOf="@id/iv_logout"
        app:layout_constraintBottom_toBottomOf="@id/iv_logout"
        android:layout_marginStart="36dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>