<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.VehicleFragment">

    <TextView
        android:id="@+id/tv_select_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Vehicle"
        android:textSize="25sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/iv_bg_parking_vehilcle"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/bg_parking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_select_vehicle"/>

    <ImageView
        android:id="@+id/iv_mockup_motocycle_vehicle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/mockup_motocycle"
        app:layout_constraintEnd_toStartOf="@id/tv_modelmotocyle_vehicle"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg_parking_vehilcle"
        app:layout_constraintStart_toStartOf="@+id/iv_bg_parking_vehilcle"
        app:layout_constraintTop_toTopOf="@+id/iv_bg_parking_vehilcle" />
    <TextView
        android:id="@+id/tv_modelmotocyle_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yamaha Fazzio"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/iv_status_vehicle"
        app:layout_constraintBottom_toTopOf="@id/tv_plat_vehicle"
        app:layout_constraintStart_toEndOf="@id/iv_mockup_motocycle_vehicle"
        app:layout_constraintTop_toTopOf="@id/iv_bg_parking_vehilcle"/>
    <TextView
        android:id="@+id/tv_plat_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D 1234 EF"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg_parking_vehilcle"
        app:layout_constraintTop_toBottomOf="@id/tv_modelmotocyle_vehicle"
        app:layout_constraintStart_toStartOf="@id/tv_modelmotocyle_vehicle" />

    <ImageView
        android:id="@+id/iv_status_vehicle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_status_blue"
        app:layout_constraintTop_toTopOf="@id/iv_bg_parking_vehilcle"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg_parking_vehilcle"
        app:layout_constraintStart_toEndOf="@id/tv_modelmotocyle_vehicle"
        app:layout_constraintEnd_toEndOf="@id/iv_bg_parking_vehilcle"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="200dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#A2BBDC"
        android:textColor="@color/blue_dark"
        android:textStyle="bold"
        android:fontFamily="@font/jost_bold"
        android:layout_height="50dp"
        android:text="Add new vehicle"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/iv_bg_parking_vehilcle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>